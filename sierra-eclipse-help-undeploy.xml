<?xml version="1.0" encoding="UTF-8"?>
<project default="undeploy">
	<import file="./definitions.xml" />

	<target name="undeploy">
		<!-- Sierra Guide -->
		<delete quiet="true" file="${sg.deploy.dir}/toc.xml" />
		<delete quiet="true">
			<fileset dir="${sg.deploy.dir}">
				<include name="**/*.html" />
				<include name="**/*.png" />
